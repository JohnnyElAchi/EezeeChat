<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragmentvc"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".VerifyCodeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/eezeechatlogo" />


    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:background='@drawable/register_bg'
        android:hint="Enter Verification Code"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/dark_blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tc"
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:layout_below="@id/codeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="36dp"
        android:text="By pressing register you agree on the Terms and Conditions"
        android:textColor="@color/dark_blue"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/pp"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:text="and you confirm that you read the Privacy Policy and Data Usage"
        android:layout_below="@id/tc"
        android:textColor="@color/dark_blue"
        android:layout_marginStart="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="11dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/verifyButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/pp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:background='@drawable/btn_background'
        android:text="Verify"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>
