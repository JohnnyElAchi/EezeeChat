<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eezeechatbg"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/name"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/eezeechatlogo" />

    <Button
        android:id="@+id/gSignin"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:drawableLeft="@drawable/custom_google_logo"
        android:padding="10dp"
        android:text="Sign in with Google"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/lt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gSignin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By pressing the register you agree on the "
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:autoLink="web"
            android:linksClickable="true"
            android:onClick="openGoogleLink" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and you confirm that you read the Privacy "
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy and Data Usage"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:autoLink="web"
            android:linksClickable="true"
            android:onClick="openGoogleLink" />
    </LinearLayout>
</RelativeLayout>
