<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeMessageView"
    android:background="@color/light_blue">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   />

    <RelativeLayout
        android:id="@+id/applogo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/eezeelogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/eezeechatuplogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>



    </RelativeLayout>

     <RelativeLayout
         android:id="@+id/buycoins"
         android:clickable="true"
         android:layout_width="70dp"
         android:layout_alignParentEnd="true"
         android:layout_height="70dp"
         android:background="@color/white">

         <TextView
             android:id="@+id/numberOfCoins"
             android:layout_width="wrap_content"
             android:layout_height="25dp"
             android:layout_marginTop="5dp"
             android:textColor="@color/orange" />

         <ImageView
             android:id="@+id/paymentLogo"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@id/numberOfCoins"
             android:layout_marginTop="5dp"
             android:src="@drawable/paymentlogo" />

         <ImageView
             android:id="@+id/rightArrow"
             android:layout_width="45dp"
             android:layout_height="45dp"
             android:src="@drawable/ic_baseline_arrow_right_24"
             android:gravity="center"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true"
             android:layout_marginTop="5dp"/>

     </RelativeLayout>


    <ImageView
        android:id="@+id/swipeimage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/girlguy"
        android:layout_below="@id/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/swipeimage"
        android:gravity="center">

        <TextView
            android:id="@+id/swipeMessagegirl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Left "
            android:textColor="@color/purple_700"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/swipeMessagegirl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/swipeimage"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/swipeMessagegirl1"
            android:text=" to call a Girl"
            android:textColor="@color/purple_700"
            android:textSize="24sp" />


    </LinearLayout>


    <ImageView
        android:id="@+id/hand"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/handswipe"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="1dp" />


    <LinearLayout
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hand"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/swipeMessageguy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Right "
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/purple_700" />

        <TextView
            android:id="@+id/swipeMessageguy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/swipeimage"
            android:layout_toRightOf="@id/swipeMessageguy1"
            android:layout_centerHorizontal="true"
            android:text=" to call a Guy"
            android:textSize="24sp"
            android:textColor="@color/purple_700" />

    </LinearLayout>


</RelativeLayout>
