<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Change to your desired normal color -->
            <corners android:radius="15dp" /> <!-- Optional: Add rounded corners -->
        </shape>
    </item>

    <!-- Default (normal) state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F7941F" /> <!-- Change to your desired pressed color with reduced alpha -->
            <corners android:radius="15dp" /> <!-- Optional: Add rounded corners -->
        </shape>
    </item>
</selector>
